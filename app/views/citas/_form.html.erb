  document.addEventListener('turbolinks:load', () => {
  const Calender = document.querySelector('.datepicker') ;
  M.Datepicker.init(Calender,{});
  var elems = document.querySelectorAll('.select');
  var instances = M.FormSelect.init(elems, {});
  });
  </script>
